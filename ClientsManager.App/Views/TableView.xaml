<UserControl x:Class="ClientsManager.App.Views.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:ClientsManager.App.Views"
             xmlns:vm="clr-namespace:ClientsManager.App.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="425" d:DesignWidth="800"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:com="clr-namespace:ClientsManager.App.Views.Components"
             xmlns:con="clr-namespace:ClientsManager.App.Helpers.Converters"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:spinner="clr-namespace:LoadingSpinnerControl;assembly=LoadingSpinnerControl"
             xmlns:controlzEx="urn:controlzex">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dialogs/AddOrderDialogView.xaml"/>
                <ResourceDictionary Source="Dialogs/EditOrderDialogView.xaml"/>
                <ResourceDictionary Source="Dialogs/WarningMessageDialogView.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <DockPanel>

            <!--Tabs-->
            <DockPanel
                DockPanel.Dock="Top"
                MinHeight="30"
                Width="auto"
                HorizontalAlignment="Center"
                Margin="0 0 0 10">

                <StackPanel 
                    Orientation="Horizontal"
                    DockPanel.Dock="Left">
                    <Button Content="Автомойка" Margin="16 0" >
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                                <Setter Property="BorderBrush" Value="Violet" />
                                <Setter Property="BorderThickness" Value="0 0 0 0" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="CarWash">
                                        <Setter Property="BorderThickness" Value="0 0 0 3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="ChangeTab">
                                    <cal:Parameter Value="CarWash"/>
                                </cal:ActionMessage>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>

                    <Button Content="Шиномонтаж">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                                <Setter Property="BorderBrush" Value="Violet" />
                                <Setter Property="BorderThickness" Value="0 0 0 0" />

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="CarService">
                                        <Setter Property="BorderThickness" Value="0 0 0 3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="ChangeTab">
                                    <cal:Parameter Value="CarService"/>
                                </cal:ActionMessage>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>


                <!--Searching area-->
                <StackPanel
                    Orientation="Horizontal"
                    DockPanel.Dock="Right">
                    <Grid Margin="130 0 320 0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <ComboBox
                            Grid.Column="0"
                            x:Name="SearchOption"
                            ItemsSource="{Binding Path=SearchOption, Converter={con:EnumToCollectionConverter}, Mode=OneTime}"
                            SelectedValuePath="Value"
                            DisplayMemberPath="Description"
                            SelectedValue="{Binding Path=SearchOption}"
                            MinWidth="120"
                            MaxHeight="26"
                            Height="auto"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"/>


                        <TextBox 
                            Grid.Column="1"
                            MinWidth="200"
                            MaxHeight="26"
                            Text="{Binding SearchValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center"
                            MaxLength="25"
                            Margin="5 0"/>

                        <Button
                            Grid.Column="2"
                            Content="Найти"
                            Command="{Binding LoadPageAsyncCommand}"/>

                    </Grid>
                </StackPanel>
                
            </DockPanel>

            <ContentControl x:Name="TestComponent" />

            <!--Table-->
            <Grid DockPanel.Dock="Top">
                <DataGrid 
                    x:Name="dgOrders" 
                    Grid.Row="0"
                    IsReadOnly="True"
                    AutoGenerateColumns="False"
                    Margin="10, 0"
                    ItemsSource="{Binding Orders}"
                    Width="auto"
                    HorizontalAlignment="Center">


                    <DataGrid.Columns>
                        <!--Id-->
                        <DataGridTextColumn 
                            x:Name="Id"
                            Header="№"
                            Binding="{Binding Path=Id}"
                            Width="auto"/>

                        <!--Full name-->
                        <DataGridTextColumn 
                            Header="ФИО"
                            Width="auto"
                            SortMemberPath="FirstName">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat=" {0} {1} {2}">
                                    <Binding Path="FirstName"/>
                                    <Binding Path="LastName"/>
                                    <Binding Path="AdditionalName"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <!--Phone number-->
                        <DataGridTextColumn 
                            Header="Телефон"
                            Binding="{Binding Path=PhoneNumber, Converter={StaticResource phoneConverter}}"
                            MinWidth="100"
                            Width="auto"/>

                        <!--Car model-->
                        <DataGridTextColumn 
                            Header="Марка машины"
                            Binding="{Binding Path=CarModel}"
                            MinWidth="100"
                            Width="auto"/>

                        <!--Car number-->
                        <DataGridTextColumn 
                            Header="Номер машины"
                            Binding="{Binding Path=CarNumber}"
                            MinWidth="100"
                            Width="auto"/>

                        <!--Description-->
                        <DataGridTextColumn 
                            Header="Описание"
                            Binding="{Binding Path=Description}"
                            MinWidth="150"
                            Width="auto"/>

                        <!--Price-->
                        <DataGridTextColumn 
                            Header="Стоимость"
                            Binding="{Binding Path=Price}"
                            MinWidth="50"
                            Width="auto"/>

                        <!--Buttons-->
                        <DataGridTemplateColumn
                            Width="auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <!--Delete button-->
                                        <Button Style="{StaticResource MaterialDesignIconButton}" >
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <cal:ActionMessage MethodName="DeleteOrder">
                                                        <cal:Parameter Value="{Binding}"/>
                                                    </cal:ActionMessage>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <materialDesign:PackIcon 
                                                    Kind="TrashCan"
                                                    Foreground="Red"/>
                                        </Button>

                                        <!--Edit button-->
                                        <Button 
                                            Style="{StaticResource MaterialDesignIconButton}">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Click">
                                                    <cal:ActionMessage MethodName="EditOrder">
                                                        <cal:Parameter Value="{Binding}"/>
                                                    </cal:ActionMessage>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                            <materialDesign:PackIcon 
                                                Kind="NotebookEdit"
                                                Foreground="#4287f5"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>

                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

                <!--Pagination-->
                <ContentControl x:Name="PaginationComponent" />

                <!--Add button-->
                <materialDesign:DialogHost 
                    Identifier="Dialog"
                    CloseOnClickAway="False">

                    <Button 
                        Style="{StaticResource RoundedButton}"
                        Command="{Binding AddOrderAsyncCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="18">
                        <materialDesign:PackIcon 
                                Kind="Plus"
                                Height="25"
                                Width="25"/>
                    </Button>

                </materialDesign:DialogHost>
            </Grid>
        </DockPanel>

        <!--Spinner-->
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <spinner:LoadingSpinner 
                Grid.Row="1"
                IsLoading="{Binding IsLoading}"
                Thickness="5"
                Color="Black"/>

            <TextBlock
                Grid.Row="2"
                Margin="20"
                FontSize="18"
                Text="Загрузка..."
                TextAlignment="Center"/>
        </Grid>
    </Grid>

</UserControl>

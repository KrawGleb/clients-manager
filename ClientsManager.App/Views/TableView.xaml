<UserControl x:Class="ClientsManager.App.Views.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientsManager.App.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="425" d:DesignWidth="800"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf">
    <Grid>
        <DataGrid 
            x:Name="dgOrders" 
            Grid.Row="0"
            IsReadOnly="True"
            AutoGenerateColumns="False"
            Margin="10">

            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="№"
                    Binding="{Binding Path=Id}"
                    MinWidth="36"/>

                <DataGridTextColumn 
                    Header="ФИО"
                    Binding="{Binding Path=FullName}"
                    MinWidth="120"
                    Width="*"/>

                <DataGridTextColumn 
                    Header="Телефон"
                    Binding="{Binding Path=PhoneNumber}"
                    MinWidth="100"
                    Width="*"/>

                <DataGridTextColumn 
                    Header="Марка машины"
                    Binding="{Binding Path=CarModel}"
                    MinWidth="100"
                    Width="*"/>

                <DataGridTextColumn 
                    Header="Номер машины"
                    Binding="{Binding Path=CarNumber}"
                    MinWidth="100"
                    Width="*"/>

                <DataGridTextColumn 
                    Header="Описание"
                    Binding="{Binding Path=Description}"
                    MinWidth="150"
                    Width="*"/>

                <DataGridTextColumn 
                    Header="Стоимость"
                    Binding="{Binding Path=Price}"
                    MinWidth="50"
                    Width="*"/>
                
                
                <!-- 
                <DataGridTextColumn 
                    Header="Услуга"
                    Binding="{Binding Path=OrderType}"
                    MinWidth="50"
                    Width="*"/>
                -->

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignIconButton}" >
                                    <materialDesign:PackIcon 
                                            Kind="TrashCan"
                                            Foreground="Red"/>
                                </Button>
                                
                                <Button Style="{StaticResource MaterialDesignIconButton}">
                                    <materialDesign:PackIcon 
                                        Kind="NotebookEdit"
                                        Foreground="#4287f5"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                        
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>

        <Button 
            Style="{StaticResource RoundedButton}"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="18">
            <materialDesign:PackIcon 
                Kind="Plus"
                Height="25"
                Width="25"/>
        </Button>
    </Grid>
</UserControl>
